{% trans_default_domain 'FOSUserBundle' %}

{% block fos_user_content %}
    <link rel="stylesheet" href="{{ asset('public/css/register_stsh.css') }}" >
    <div class="register-container">
        <h1>Registration Here</h1><br>
        {{ form_start(form, {'method': 'post', 'action': path('fos_user_registration_register'), 'attr': {'class': 'fos_user_registration_register'}}) }}
            {{ form_widget(form) }}
        <div >
            <input type="checkbox" id="pat" name="_patient" value="off" />
            <label for="pat">Patient </label>
            <input type="checkbox" id="doc" name="_doctor" value="off" />
                <label for="doc">Doctor </label>
            <input type="submit" class="register register-submit" id="_submit" name="_submit" value="{{ 'registration.submit'|trans }}" />
        </div>
        {{ form_end(form) }}
    </div>
{% endblock fos_user_content %}

